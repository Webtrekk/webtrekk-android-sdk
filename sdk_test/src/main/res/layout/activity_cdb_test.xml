<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/cdb_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="avartbaR onov@yandex.ru"
            android:hint="Email"/>
        <EditText
            android:id="@+id/cdb_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12345gGh g678"
            android:hint="Phone"
            />
        <EditText
            android:id="@+id/cdb_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="arsen|vartbaronov|12121212|Hannovershce _tdr1ß1gh_2ä2_e-3ö3-t str.|19"
            android:hint="Address"
            />
        <EditText
            android:id="@+id/cdb_android_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Android id123"
            android:hint="Android id"
            />
        <EditText
            android:id="@+id/cdb_ios_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="iOS ID 123"
            android:hint="iOS ID"
            />
        <EditText
            android:id="@+id/cdb_windows_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Win ID 123"
            android:hint="Windows ID"
            />
        <EditText
            android:id="@+id/cdb_facebook_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Facebook ID 123"
            android:hint="Facebook ID"
            />
        <EditText
            android:id="@+id/cdb_twitter_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Twitter ID123"
            android:hint="Twitter ID"
            />
        <EditText
            android:id="@+id/cdb_google_plus_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Google plus ID 123"
            android:hint="Google plus ID"
            />
        <EditText
            android:id="@+id/cdb_linkin_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LinkIn ID 123"
            android:hint="LinkIn ID"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/cdb_custom_ind1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="1"
                android:hint="Custom ind1"
                />
            <EditText
                android:id="@+id/cdb_custom_value1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="custom 1"
                android:hint="Custom value1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/cdb_custom_ind2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="2"
                android:hint="Custom ind2"
                />
            <EditText
                android:id="@+id/cdb_custom_value2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="custom 2"
                android:hint="Custom value2"
                />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/cdb_send_request"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Send Request"
            android:src = "@null"
            />
        <Button
            android:id="@+id/cdb_clear_fields"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:src = "@null"
            />
        </LinearLayout>
        <Button
            android:id="@+id/cdb_unit_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Do unit test"
            android:src = "@null"
            />
        <TextView
            android:textSize="16sp"
            android:id="@+id/cdb_unit_test_console"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</ScrollView>